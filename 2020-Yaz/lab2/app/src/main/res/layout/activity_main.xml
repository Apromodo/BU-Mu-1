<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#404040"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <EditText
            android:id="@+id/editText"
            android:background="#1E6C8F"
            android:layout_margin="40dp"
            android:layout_weight="1"
            android:padding="17dp"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:text="0"
            android:layout_height="wrap_content">

        </EditText>

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:background="#AAAAAA"
            android:gravity="center"
            android:padding="13dp"
            android:textSize="21dp"
            android:text="X">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:gravity="center"
                android:padding="9dp"
                android:text="sin"
                android:textSize="21dp">

            </TextView>

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="#3F51B5"
                android:gravity="center"
                android:padding="9dp"
                android:text="cos"
                android:textSize="21dp">

            </TextView>

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="#3F51B5"
                android:gravity="center"
                android:padding="9dp"
                android:text="tan"
                android:textSize="21dp">


            </TextView>

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="#3F51B5"
                android:gravity="center"
                android:padding="9dp"
                android:text="Ω"
                android:textSize="21dp">


            </TextView>

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="#3F51B5"
                android:gravity="center"
                android:padding="9dp"
                android:text="!"
                android:textSize="21dp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="1dp">



            <TextView
                android:gravity="center"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:padding="9dp"
                android:textSize="21dp"
                android:text="ln">

            </TextView>

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:gravity="center"
                android:padding="9dp"
                android:textSize="21dp"
                android:layout_marginTop="1dp"
                android:text="log">

            </TextView>

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:gravity="center"
                android:padding="9dp"
                android:textSize="21dp"
                android:layout_marginTop="1dp"
                android:text="e">


            </TextView>

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:gravity="center"
                android:padding="9dp"
                android:textSize="21dp"
                android:layout_marginTop="1dp"
                android:text="^">


            </TextView>

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:gravity="center"
                android:padding="9dp"
                android:textSize="21dp"
                android:layout_marginTop="1dp"
                android:text="√">

            </TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="22"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="#AAAAAA"
                        android:gravity="center"
                        android:paddingVertical="14dp"
                        android:text="7"
                        android:textSize="21dp">

                    </TextView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:background="#AAAAAA"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="8"
                        android:textSize="21dp">

                    </TextView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:background="#AAAAAA"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="9"
                        android:textSize="21dp">


                    </TextView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:background="#3F51B5"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="/"
                        android:textSize="21dp">


                    </TextView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:background="#3F51B5"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="("
                        android:textSize="21dp">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="#AAAAAA"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="4"
                        android:textSize="21dp">

                    </TextView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:background="#AAAAAA"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="5"
                        android:textSize="21dp">

                    </TextView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:background="#AAAAAA"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="6"
                        android:textSize="21dp">


                    </TextView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:background="#3F51B5"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="X"
                        android:textSize="21dp">


                    </TextView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:background="#3F51B5"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text=")"
                        android:textSize="21dp">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:background="#AAAAAA"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="1"
                            android:textSize="21dp">

                        </TextView>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:background="#AAAAAA"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="2"
                            android:textSize="21dp">

                        </TextView>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:background="#AAAAAA"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="3"
                            android:textSize="21dp">


                        </TextView>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:background="#3F51B5"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="-"
                            android:textSize="21dp">


                        </TextView>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_weight="233"
                                    android:layout_width="80dp"
                                    android:layout_height="121dp"
                                    android:layout_marginLeft="1dp"
                                    android:background="#3F51B5"
                                    android:gravity="center"
                                    android:padding="16dp"
                                    android:text="="
                                    android:textSize="21dp">

                                </TextView>

                            </TextView>


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="161dp"
                            android:layout_height="wrap_content"
                            android:background="#AAAAAA"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="0"
                            android:textSize="21dp">

                        </TextView>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:background="#AAAAAA"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="."
                            android:textSize="21dp">

                        </TextView>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:background="#3F51B5"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="+"
                            android:textSize="21dp">


                        </TextView>



                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>