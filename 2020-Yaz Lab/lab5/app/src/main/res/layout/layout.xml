<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="1dp"
            android:padding="16dp"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="A TAKIMI"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/takimaSC"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="56sp" />

            <Button
                android:id="@+id/takimA3"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:background="#ff9800"
                android:text="+3 PUAN"
                android:textSize="14sp" />

            <Button
                android:id="@+id/takimA2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff9800"
                android:layout_marginTop="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="+2 PUAN"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/takimA1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff9800"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="serbest atış"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="1dp"
            android:padding="16dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B TAKIMI"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/takimBSC"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="0"
                android:textSize="56sp"/>

            <Button
                android:id="@+id/takimB3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff9800"
                android:layout_marginTop="56dp"
                android:text="+3 PUAN"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/takimB2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ff9800"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="+2 PUAN"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/takimB1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff9800"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="serbest atış"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="SIFIRLA"
        android:background="#ff9800"
        android:textSize="14sp" />

</RelativeLayout>