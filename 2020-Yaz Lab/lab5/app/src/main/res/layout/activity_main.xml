<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="16dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="A TAKIMI"/>

            <TextView
                android:id="@+id/takimASC"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="56sp"/>

            <Button
                android:id="@+id/takimA3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:background="#FFAA00"
                android:layout_margin=""
                android:text="+3 PUAN"/>

            <Button
                android:id="@+id/takimA2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFAA00"
                android:layout_marginTop="8dp"
                android:text="+2 PUAN"/>

            <Button
                android:id="@+id/takimA1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFAA00"
                android:layout_marginTop="8dp"
                android:text="serbest atış"/>

        </LinearLayout>

        <View
            android:layout_marginTop="16dp"
            android:layout_width="2dp"
            android:layout_height="400dp"
            android:background="#000000"
            android:layout_gravity="center"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="16dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B TAKIMI"/>

            <TextView
                android:id="@+id/takimBSC"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="0"
                android:textSize="56sp"/>

            <Button
                android:id="@+id/takimB3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFAA00"
                android:layout_marginTop="56dp"
                android:text="+3 PUAN"/>

            <Button
                android:id="@+id/takimB2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#FFAA00"
                android:text="+2 PUAN"/>

            <Button
                android:id="@+id/takimB1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFAA00"
                android:layout_marginTop="8dp"
                android:text="serbest atış"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/sifirla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="SIFIRLA"
        android:background="#FFAA00"/>

</RelativeLayout>